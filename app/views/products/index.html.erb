
<% if current_user && current_user.admin %>
<button type="button" class="btn btn-info"><%= link_to "Add a new product", new_product_path %></button>
<% end %>
<h1>Available Products</h1>


        



<% if @products.any?%>
<ul class="products">
  <% @products.each do |product| %>
  <li><%= link_to product.name, product_path(product) %></li>
  <%end%>
</ul>
<%else%>
<p>We seem to be sold out, please check back at a later time. Thank you for letting us serve you.</p>
<%end%>


